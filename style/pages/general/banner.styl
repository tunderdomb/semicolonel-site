logosize = 100px

.banner
  background blue
  height: 250px
  //margin-bottom (logosize/2+20px)
  //margin-bottom 20px

.banner-img
  opacity .05
  width: 100%
  height: 100%
  background url("/static/img/bg/tumblr_lho7m0Eder1qcreb4o1_1280.jpg") top center
  /*background-size cover*/
  filter grayscale(1)

.category-logo
  position: absolute
  bottom: -(logosize/2)
  left: 0
  right: 0
  &:after
    content ""
    display block
    background #2e2e2e
    width: logosize
    height: logosize
    border-radius logosize
    margin: 0 auto