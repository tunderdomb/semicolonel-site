.diamond
  size = 90px
  display: inline-block;
  vertical-align middle
  cursor: pointer;
  width: size;
  height: size;
  border-radius: size
  text-align: center;
  /*color: #fff;*/

  /*transform rotate(45deg)*/
  background: rgba(10,255,10,0.4);
  transition: transform ease-out 0.1s, background 0.2s;

  &:nth-child(odd),
  &:nth-child(odd):hover
    /*transform: rotate(45deg) translateX(size/2)  translateY(size/2)*/
  span
    display inline-block
    width: size;
    height: size;
    padding: (size / 3) 0
    /*transform rotate(-45deg)*/
  &:after {
    content ""

    pointer-events: none;
    position: absolute;
    width: 100%;
    height: 100%;
    border-radius: size
    /*border-radius: 50%;*/
    /*box-sizing: content-box;*/

    top: 0;
    left: 0;
    padding: 0;
    z-index: -1;
    box-shadow: 0 0 0 2px rgba(255,255,255,0.1);
    opacity: 0;
    transform: scale(0.9);
  }
  &:hover
    /*background: rgba(255,255,255,0.05);*/
    /*transform: rotate(45deg) scale(0.93);*/
    /*color: #fff;*/
  &:hover:after
    animation: sonarEffect 1.3s ease-out 75ms;

@keyframes sonarEffect {
  0% {
    opacity: 0.3;
  }
  40% {
    opacity: 0.5;
    box-shadow: 0 0 0 2px rgba(255,255,255,0.1), 0 0 10px 10px #3851bc, 0 0 0 10px rgba(255,255,255,0.5);
  }
  100% {
    box-shadow: 0 0 0 2px rgba(255,255,255,0.1), 0 0 10px 10px #3851bc, 0 0 0 10px rgba(255,255,255,0.5);
    transform: scale(1.5);
    opacity: 0;
  }
}